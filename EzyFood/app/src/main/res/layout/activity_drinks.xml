<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_asset_5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="42dp"
        android:text="Drinks"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_medium"
        android:textSize="26dp"/>

    <ImageView
        android:id="@+id/back_drinks"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_asset_1" />

    <ImageView
        android:id="@+id/ezy_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_asset_2"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>

    <GridLayout
        android:columnCount="1"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/back_drinks"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_gravity="left|center_horizontal">

                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_coffee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="70dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_gravity="left|center_horizontal">

                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_soda" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soda"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="30dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000"
                    android:layout_marginTop="70dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>